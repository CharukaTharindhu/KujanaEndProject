    ViewData["Title"] = "AddNewClient";
 
}
<head>
    <link href="~/css/Addfile.css" rel="stylesheet" />
</head>
<div class="container">
    <header class="header">
        <h1 id="title" class="text-center">Add New Unavailability</h1>
        <p id="description" class="description text-center">

        </p>
    </header>





    <form asp-action="UpdateUnavailability" id="survey-form">
        <div class="form-group">

            <div class="row">
                <div class="procolumn">

                </div>
                <div class="procolumn">
                    <h6>Worker</h6>
                    <br />
                    <br />
                    <h6>Is All Day?</h6>
                    <br />

                    <label for="dateofbirth">Start Date</label>
                    <br />
                    <label for="dateofbirth">End Date</label>
                    <br />
                    <h6>Recurrance</h6>
                    <br />
                    <h6>Comment</h6>
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <div>
                        <div style="float:left"><button type="submit" class="btn btn-secondary" onClick="return false;">Cancel</button></div>
                    </div>
                </div>


                <div class="pro3column">
                    <select id="dropdown" asp-for="Worker" class="form-control" required>
                        @*<option disabled selected value>Gendere</option>*@
                        <option value="Pasan Wijesuriya">Pasan Wijesuriya</option>
                    </select>
                    <input type="hidden" asp-for="UID"/>
                    <br />
                    <select id="dropdown" asp-for="Is_all_day" class="form-control" required>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>
                    <br />
                    <input type="date" asp-for="Start_time" id="dateofbirth">
                    <br />
                    <input type="date" asp-for="End_time" id="dateofbirth">
                    <br />
                    <select id="dropdown" asp-for="Recurrance" class="form-control" required>
                        @*<option disabled selected value>Gendere</option>*@
                        <option value="none">--none--</option>
                        <option value="Daily">Daily</option>
                        <option value="Weekly">Weekly</option>
                        <option value="Monthly">Monthly</option>
                        <option value="Yearly">Yearly</option>
                    </select>
                    <br />
                    <textarea id="comments"
                              class="input-textarea"
                              asp-for="Comment"></textarea>
                    <br />
                    <br />
                    <br />
                    <div>
                        <div style="float:right"><button type="submit" class="btn btn-primary">Update</button></div>
                    </div>
                </div>
                <div class="procolumn">

                </div>
            </div>



        </div>


        <script type="text/javascript">
            const projectName = 'survey-form';

        </script>
    </form>
</div>








