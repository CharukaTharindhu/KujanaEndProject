@model MVC_DynamicMenu.ViewModels.RosterView
@using Newtonsoft.Json;
@using Microsoft.AspNetCore.Http;
@{
    List<Users> staff = ViewBag.Users;
    ViewData["Title"] = "AddNewClient";
    //List<Patient> cli = JsonConvert.DeserializeObject<List<Patient>>(Context.Session.GetString("Leave"));
}
<head>
    <link href="~/css/Addfile.css" rel="stylesheet" />
</head>
<div class="container">
    <header class="header">
        <h1 id="title" class="text-center">Schedule Shift</h1>
        <p id="description" class="description text-center">

        </p>
    </header>





    <form asp-action="Roster" id="survey-form" method="post">
        <div class="form-group">

            <div class="row">

                <div class="col-md-12">

                    <div class="form-group">
                        <label>Staff Name</label>
                        <select id="dropdown" asp-for="StaffName" class="form-control" required>
                            @*<option disabled selected value>Gendere</option>*@
                            @foreach (var item in staff)
                            {
                            <option value="@item.username">@item.Name</option>
                            }

                        </select>
                    </div>
                    <div class="form-group">
                        <label>Start Date</label>
                        <input type="date" asp-for="StartDate">
                    </div>

                    <div class="form-group">
                        <label>Start Time</label>
                        <input type="time" asp-for="StartTime">
                    </div>

                    <div class="form-group">
                        <label>End Date</label>
                        <input type="date" asp-for="EndDate">
                    </div>

                    <div class="form-group">
                        <label>End Time</label>
                        <input type="time" asp-for="EndTime">
                    </div>

                    <div class="form-group">
                        <textarea id="comments"
                                  class="input-textarea"
                                  asp-for="Location" placeholder="Location"></textarea>
                        <input type="hidden" asp-for="offset" id="offset" />

                        <div>
                            <div style="float:right"><button type="submit" class="btn btn-primary">Submit</button></div>
                        </div>

                    </div>
                </div>



            </div>
        </div>
        @section Scripts{
            <script>
                $(function () {
                    var d = new Date();          
                    $("#offset").val(d.getTimezoneOffset());            
                });
            
             
            </script>
        }
    </form>
</div>







