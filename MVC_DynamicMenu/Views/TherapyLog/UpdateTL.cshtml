
@model MVC_DynamicMenu.Models.NewTherapyLog
@{
    ViewData["Title"] = "Home page";
}
<head>
    <link href="~/css/Addfile.css" rel="stylesheet" />
</head>
<div class="container">
    <header class="header">
        <h1 id="title" class="text-center">Form : Therapy Log</h1>
        <p id="description" class="description text-center">

        </p>
    </header>
    <form asp-action="UpdateTL" id="survey-form">
        <div class="form-group">
            <label id="name-label" asp-for="Client_Name">Participant</label>
            <input type="text"
                   asp-for="Client_Name"
                   id="name"
                   class="form-control"
                   placeholder="Enter your name"
                   required />
        </div>



        @*Date Start*@
        <input type="hidden" asp-for="ClientID" />
        <label asp-for="Client_Name">Entry Date</label>
        <input type="date" asp-for="Entry_date" id="dateofbirth">

        @*Hierarchy Start*@
        <div class="form-group">
            <p>Hierarchy</p>
            <select id="dropdown" asp-for="Hierarchy" class="form-control" required>
                @*<option disabled selected value>Select current role</option>*@
                <option value="ACT_Springfield_Evergreen">ACT Springfield Evergreen</option>
                <option value="NWS_Demo_Region">NWS Demo Region</option>
                <option value="NSW_Demo_Region_A_Unit_1_3">NSW Demo Region A Unit 1 3</option>
                <option value="NSW_Demo_Region_2_Unit_2_1_A">NSW Demo Region 2 Unit 2 1 A</option>
                <option value="QLD_Region_4_Bridging_Famillies">QLD Region 4 Bridging Famillies</option>
                <option value="QLD_Region_Younger_parents_program">QLD Region Younger parents program</option>
                <option value="NWS_Eiver_Dischange_review">NWS Eiver Dischange review</option>
            </select>
        </div>

        <button type="button" class="accordion">Mental Threapy </button>
        <div class="panel">
            <p>>Mental Therapy</p>
            <label id="name-label" asp-for="Mental_Duration_Time">Duration Time</label>
            <input type="text"
                   asp-for="Mental_Duration_Time"
                   id="name"
                   class="form-control"
                   placeholder="Enter your name"
                   required />

            <h6>Before Therapy</h6>
            <textarea id="comments" class="input-textarea" asp-for="Mental_Before_Therapy"></textarea>

            <h6>After Therapy</h6>
            <textarea id="comments" class="input-textarea" asp-for="Mental_After_Therapy"></textarea>

            <h6>Mental Exercises</h6>
            <textarea id="comments" class="input-textarea" asp-for="Mental_Exercises"></textarea>

            <h6>Client Concerns</h6>
            <textarea id="comments" class="input-textarea" asp-for="Mental_Client_Concerns"></textarea>

            <h6>Mental Status</h6>
            <textarea id="comments" class="input-textarea" asp-for="Mental_Status"></textarea>
        </div>
        <button type="button" class="accordion">Physical Therapy</button>
        <div class="panel">
            <p>>Physical Therapy</p>
            <label id="name-label" asp-for="Physical_Duration_Time">Duration Time</label>
            <input type="text"
                   asp-for="Physical_Duration_Time"
                   id="name"
                   class="form-control"
                   placeholder="Enter your name"
                   required />

            <h6>Before Therapy</h6>
            <textarea id="comments" class="input-textarea" asp-for="Physical_Before_Therapy"></textarea>

            <h6>After Therapy</h6>
            <textarea id="comments" class="input-textarea" asp-for="Physical_After_Therapy"></textarea>

            <h6>Physical Exercises</h6>
            <textarea id="comments" class="input-textarea" asp-for="Physical_Exercises"></textarea>

            <h6>Client Concerns</h6>
            <textarea id="comments" class="input-textarea" asp-for="Physical_Client_Concerns"></textarea>

            <h6>Physical Status</h6>
            <textarea id="comments" class="input-textarea" asp-for="Physical_Status"></textarea>
        </div>

        <div class="form-group">
            <button type="submit" id="submit" class="submit-button">
                Submit
            </button>
        </div>


        <script type="text/javascript">
            const projectName = 'survey-form';

        </script>
    </form>
</div>








