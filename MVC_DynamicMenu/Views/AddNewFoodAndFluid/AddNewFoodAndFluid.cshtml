@model AddNewFoodAndFluid
@using Newtonsoft.Json;
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "";
    List<Patient> cli = JsonConvert.DeserializeObject<List<Patient>>(Context.Session.GetString("FoodsAndFluids"));
    string loggeduser = Context.Session.GetString("loggedname");
}
<head>
    <link href="~/css/Addfile.css" rel="stylesheet" />
</head>
<div class="container">
    <header class="header">
        <h1 id="title" class="text-center">Add A New Food And Fluid</h1>
        <p id="description" class="description text-center">

        </p>
    </header>
    <form asp-action="AddNewFoodAndFluid" id="survey-form">
        <div class="form-group">
            <label id="name-label" asp-for="Client_Name">Select Participant</label>
            <select class="form-control" asp-for="Client_Name" placeholder="Pick a Name">
                @foreach (var item in cli)
                {
                    <option value="@item.Full_Name">@item.Full_Name</option>}

            </select>
        </div>

        <label asp-for="Start_date">Start Date</label>
        <input type="date" asp-for="Start_date" id="dateofbirth">

        <label asp-for="End_date">End Date</label>
        <input type="date" asp-for="End_date" id="dateofbirth">



        <div class="form-group">

            <br />
            <h6>Breakfast</h6>
            <textarea id="comments"
                      class="input-textarea"
                      asp-for="Breakfast"></textarea>

            <br />
            <h6>Lunch</h6>
            <textarea id="comments"
                      class="input-textarea"
                      asp-for="Lunch"></textarea>
            <br />
            <h6>Dinner</h6>
            <textarea id="comments"
                      class="input-textarea"
                      asp-for="Diner"></textarea>

            <br />
            <h6>Additional Food</h6>
            <textarea id="comments"
                      class="input-textarea"
                      asp-for="Additional_Food"></textarea>

            <br />
            <h6>Breakfast Fluid</h6>
            <textarea id="comments"
                      class="input-textarea"
                      asp-for="Breakfast_Fluid"></textarea>
            <br />
            <h6>Lunch Fluid</h6>
            <textarea id="comments"
                      class="input-textarea"
                      asp-for="Lunch_Fluid"></textarea>
            <br />
            <h6>Dinner Fluid</h6>
            <textarea id="comments"
                      class="input-textarea"
                      asp-for="Diner_Fluid"></textarea>
            <br />
            <h6>Total Calories</h6>
            <textarea id="comments"
                      class="input-textarea"
                      asp-for="Toal_Calories"></textarea>
            <br />
            <h6>Status</h6>
            <textarea id="comments"
                      class="input-textarea"
                      asp-for="Status"></textarea>
            <br />
        </div>
        <div class="form-group">
            <p>Completion & Sign-off</p>
            <label id="name-label" asp-for="Staf_Name">Staff Member Name</label>
            <input type="text"
                   asp-for="Staf_Name"
                   id="name"
                   value="@loggeduser"
                   readonly
                   class="form-control"
                   placeholder="Select Staff"
                   required />
        </div>

        <div class="form-group">
            <button type="submit" id="submit" class="submit-button">
                Submit
            </button>
        </div>
        <script type="text/javascript">
            const projectName = 'survey-form';

        </script>
  

          @section Scripts{
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-labels').html(fileName)
                    });
                });

                $(document).ready(function () {
                    $('select').selectize({
                        sortField: 'text'
                    });
                });

            </script>
        }
 
    </form>
</div>





