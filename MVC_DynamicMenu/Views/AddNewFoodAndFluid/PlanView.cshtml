@model IEnumerable<MVC_DynamicMenu.Models.AddNewFoodAndFluid>

@{ ViewData["Title"] = "PlanView";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<head>
    <link href="~/css/Addfile.css" rel="stylesheet" />
</head>
<div class="container">
    <header class="header">
        <div class="text-right">
            <button type="button" onclick='window.location.href = "/AddNewFoodAndFluid/AddNewFoodAndFluid"' class="btn btn-primary">+New Entry</button>
        </div>

        <h1 id="title" class="text-center">VIEW ALL Food And Fluid</h1>
        <p id="description" class="description text-center">

        </p>
    </header>
    <form id="survey-form">
        <div class="form-group">
            <label id="name-label" for="name">Select Participant</label>
            <input type="text"
                   name="name"
                   id="name"
                   class="form-control"
                   placeholder="Enter name"
                   required />
        </div>


        <table class="table badge-light">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Client_Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Start_date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.End_date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Staf_Name)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Client_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Start_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.End_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Staf_Name)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>

        <td>
            <a asp-controller="Medication" asp-action="MedicationApprove" asp-route-id="@item.ClientID">Approve</a> |
            <a asp-controller="Medication" asp-action="EditPlan" asp-route-id="@item.ClientID">Edit</a> |
        </td>
    </tr>}
            </tbody>
        </table>
        <script type="text/javascript">const projectName = 'survey-form';</script>
    </form>
</div>