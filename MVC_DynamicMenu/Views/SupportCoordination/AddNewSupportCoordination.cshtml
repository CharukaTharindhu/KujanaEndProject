@model AddNewSupportCoordination
@using Newtonsoft.Json;
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Add New Support Coordination";
    List<Patient> cli = JsonConvert.DeserializeObject<List<Patient>>(Context.Session.GetString("support"));
    string loggeduser = Context.Session.GetString("loggedname");
}
<head>
    <link href="~/css/Addfile.css" rel="stylesheet" />
</head>
<div class="container">
    <header class="header">
        <h1 id="title" class="text-center">Add A New Support Co-ordination Case Note </h1>
        <p id="description" class="description text-center">

        </p>
    </header>
    <form asp-action="AddNewSupportCoordination" id="survey-form">
        <div class="form-group">
            <label id="name-label" asp-for="Client_name">Participant</label>
            <select class="form-control" asp-for="Client_name" placeholder="Pick a Name">
                @foreach (var item in cli)
                {
                    <option value="@item.Full_Name">@item.Full_Name</option>

                }

            </select>
        </div>
        @*Date Start*@
        <label asp-for="EntryDate">Entry Date</label>
        <input type="date" asp-for="EntryDate" id="dateofbirth">

        @*Hierarchy Start*@
        <div class="form-group">
            <p>Hierarchy</p>
            <select id="dropdown" asp-for="Heirarchy" class="form-control" required>
                @*<option disabled selected value>Select current role</option>*@
                <option value="ACT_Springfield_Evergreen">ACT Springfield Evergreen</option>
                <option value="NWS_Demo_Region">NWS Demo Region</option>
                <option value="NSW_Demo_Region_A_Unit_1_3">NSW Demo Region A Unit 1 3</option>
                <option value="NSW_Demo_Region_2_Unit_2_1_A">NSW Demo Region 2 Unit 2 1 A</option>
                <option value="QLD_Region_4_Bridging_Famillies">QLD Region 4 Bridging Famillies</option>
                <option value="QLD_Region_Younger_parents_program">QLD Region Younger parents program</option>
                <option value="NWS_Eiver_Dischange_review">NWS Eiver Dischange review</option>
            </select>
        </div>
        <button type="button" class="accordion">Date</button>
        <div class="panel">
            @*Date*@
            <label asp-for="Date">Date</label>
            <input type="date" asp-for="Date" id="dateofbirth">

            <div class="form-group">
                <label id="name-label" asp-for="Time">Time</label>
                <input type="text"
                       asp-for="Time"
                       id="name"
                       class="form-control"
                       required />
            </div>
        </div>
        @*Support Details*@
        <button type="button" class="accordion">Support Details</button>
        <div class="panel">
            <p>Support Details</p>

            <div class="form-group">
                <p>Type of Support Co-ordination activity</p>
                <select id="dropdown" asp-for="Type_of_support_coordination_activity" class="form-control" required>
                    @*<option disabled selected value>Select current role</option>*@
                    <option value="student">New</option>
                    <option value="job">Full Time Job</option>
                    <option value="learner">Full Time Learner</option>
                    <option value="preferNo">Prefer not to say</option>
                    <option value="other">Other</option>
                </select>
            </div>

            <h6>Contact Type</h6>
            <label>
                <input asp-for="ContactType"
                       value="Phone Call"
                       type="radio"
                       class="input-radio"
                       checked />Phone Call
            </label>
            <label>
                <input asp-for="ContactType"
                       value="Email"
                       type="radio"
                       class="input-radio" />Email
            </label>

            <label>
                <input asp-for="ContactType"
                       value="Face to Face"
                       type="radio"
                       class="input-radio" />Face to Face
            </label>
            <label>
                <input asp-for="ContactType"
                       value="Referrai Action"
                       type="radio"
                       class="input-radio" />Referrai Action
            </label>
            <label>
                <input asp-for="ContactType"
                       value="Report prep"
                       type="radio"
                       class="input-radio" />Report prep
            </label>
            <label>
                <input asp-for="ContactType"
                       value="Research"
                       type="radio"
                       class="input-radio" />Research
            </label>
            <label>
                <input asp-for="ContactType"
                       value="Stakeholder Meeting"
                       type="radio"
                       class="input-radio" />Stakeholder Meeting
            </label>
            <h6>Service (Claim) Type</h6>
            <label>
                <input asp-for="ServiceType"
                       value="Direct Support"
                       type="radio"
                       class="input-radio"
                       checked />Direct Support
            </label>
            <label>
                <input asp-for="ServiceType"
                       value="Report Writing"
                       type="radio"
                       class="input-radio" />Report Writing
            </label>

            <label>
                <input asp-for="ServiceType"
                       value="Non-Face to Face"
                       type="radio"
                       class="input-radio" />Non-Face to Face
            </label>
        </div>
        @*Details*@
        <button type="button" class="accordion">Details</button>
        <div class="panel">
            <div class="form-group">

                <p>Details</p>
                <h6>Purpose</h6>
                <textarea id="comments"
                          class="input-textarea"
                          asp-for="Purpose"></textarea>
                <h6>Outcome(s)</h6>
                <textarea id="comments"
                          class="input-textarea"
                          asp-for="Outcome"></textarea>
                <h6>Follow Up</h6>
                <textarea id="comments"
                          class="input-textarea"
                          asp-for="FollowUp"></textarea>
                <h6>Duration</h6>
                <textarea id="comments"
                          class="input-textarea"
                          asp-for="Duration"></textarea>
            </div>
        </div>
        @*Completion & Sign-off*@


        <div class="form-group">
            <p>Completion & Sign-off</p>
            <label id="name-label" asp-for="StaffName">Staff Member Name</label>
            <input type="text"
                   asp-for="StaffName"
                   id="name"
                   value="@loggeduser"
                   readonly
                   class="form-control"
                   required />
        </div>


        <div class="form-group">

            <h6>Signature</h6>
            <textarea id="comments"
                      class="input-textarea"
                      asp-for="StaffSignature"></textarea>
        </div>
        <div class="form-group">
            <p>Completion & Sign-off</p>
            <label id="name-label" for="name">Name</label>
            <input type="text"
                   asp-for="Name"
                   id="name"
                   value="@loggeduser"
                   readonly
                   class="form-control"
                   required />
        </div>

        <div class="form-group">
            <button type="submit" id="submit" class="submit-button">
                Submit
            </button>
        </div>
        <script type="text/javascript">
            const projectName = 'survey-form';

        </script>

        <script>
            $(document).ready(function () {
                $('select').selectize({
                    sortField: 'text'
                });
            });

        </script>
    </form>
</div>






