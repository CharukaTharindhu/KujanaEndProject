
@model List<Fortnighttly>
@{
    ViewData["Title"] = "Home page";
}
<head>
    <link href="~/css/Addfile.css" rel="stylesheet" />
</head>
<div class="container">
    <header class="header">
        <div class="text-right">
            <button type="button" onclick='window.location.href = "/NewFortnightlySafety/AddNewFS"' class="btn btn-primary">+New Entry</button>
        </div>

        <h1 id="title" class="text-center">Show All Fortnightly Safety Equipment Check</h1>
        <p id="description" class="description text-center">

        </p>
    </header>

    <form id="survey-form" style="overflow-x:auto;">
        <div class="form-group">
            <label id="name-label" for="name">Select Participant</label>
            <input type="text"
                   name="name"
                   id="myInput"
                   class="form-control"
                   placeholder="Enter name"
                   onkeyup="myFunction()"
                   required />
        </div>
        @*Date Start*@
        <label for="dateofbirth"></label>
        <input type="date" name="dateofbirth" id="dateofbirth">
        @*Date Start*@
        <label for="dateofbirth"></label>
        <input type="date" name="dateofbirth" id="dateofbirth">

        @*Hierarchy Start*@
        <div class="form-group">
            <p>Please Select a State</p>
            <select id="dropdown" name="role" class="form-control" required>
                @*<option disabled selected value>Select current role</option>*@
                <option value="student">ACT</option>
                <option value="job">NSW</option>
                <option value="learner">VIC</option>
                <option value="student">QLD</option>
                <option value="job">SA</option>
                <option value="learner">WA</option>
                <option value="job">TAS</option>
                <option value="learner">NTA</option>
            </select>
        </div>

        <div class="row">
            <div class="col-md-12">
                <table class="table badge-light">
                    <thead>
                        <tr>
                            <th>Reference</th>
                            <th>Participant</th>
                            <th>Unity</th>
                            <th>Entry Date</th>
                            <th>Last Uplod</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Reference</td>
                            <td>@item.Unit</td>
                            <td>@item.Entry_Date</td>
                            <td>@item.Last_Updated</td>
                            <td>
                                <a asp-controller="NewFortnightlySafety" asp-action="ViewFS" asp-route-id="@item.Reference">View</a>
                                <a asp-controller="NewFortnightlySafety" asp-action="UpdateFS" asp-route-id="@item.Reference">Update</a>
                                <a asp-controller="NewFortnightlySafety" asp-action="DeleteFS" asp-route-id="@item.Reference">Delete</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>

        <script type="text/javascript">
            const projectName = 'survey-form';

        </script>

        @section Scripts{
            <script>
                function myFunction() {
                    var input, filter, table, tr, td, i, txtValue;
                    input = document.getElementById("myInput");
                    filter = input.value.toUpperCase();
                    table = document.getElementById("myTable");
                    tr = table.getElementsByTagName("tr");
                    for (i = 0; i < tr.length; i++) {
                        td = tr[i].getElementsByTagName("td")[1];
                        if (td) {
                            txtValue = td.textContent || td.innerText;
                            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                                tr[i].style.display = "";
                            } else {
                                tr[i].style.display = "none";
                            }
                        }
                    }
                }
            </script>


        }
    </form>





