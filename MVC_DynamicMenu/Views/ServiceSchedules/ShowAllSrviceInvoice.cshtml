@model List<Serviceinvoiced>
@{
    ViewData["Title"] = "Home page";
}
<head>
    <link href="~/css/Addfile.css" rel="stylesheet" />
</head>
<div class="container">
    <header class="header">

        <h1 id="title" class="text-center">Show All Service Invoice</h1>
        <p id="description" class="description text-center">

        </p>
    </header>

    <form id="survey-form">
        <div class="form-group">
            <label id="name-label" for="name">Select Participant</label>
            <input type="text"
                   name="name"
                   id="myInput"
                   class="form-control"
                   placeholder="Enter name"
                   onkeyup="myFunction()"
                   required />
        </div>


        <div class="row" style="overflow-x:auto;">
            <div class="col-md-12">
                <table class="table badge-light">
                    <thead>
                        <tr>
                            <th>Reference</th>
                            <th>Claim Status</th>
                            <th>Claim Number</th>
                            <th>Claim External reference</th>
                            <th>Client</th>
                            <th>Activit start day</th>
                            <th>Invoice day</th>
                            <th>Support item</th>
                            <th>Service</th>
                            <th>Provider</th>
                            <th>Biller Type</th>
                            <th>Total</th>
                           
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Reference</td>
                            <td>@item.Claim_status</td>
                            <td>@item.Claim_number</td>
                            <td>@item.Claim_External_refewnce</td>
                            <td>@item.Client</td>
                            <td>@item.Activiti_start_day</td>
                            <td>@item.Invoice_date</td>
                            <td>@item.Suport_item</td>
                            <td>@item.Service</td>
                            <td>@item.Provider</td>
                            <td>@item.Biller_type</td>
                            <td>@item.Total</td>
                            
                            <td>
                                <a asp-controller="Patient" asp-action="ViewPatient" asp-route-id="@item"></a>
                                <a asp-controller="Patient" asp-action="UpdatePatient" asp-route-id="@item"></a>
                                <a asp-controller="Patient" asp-action="DeletePatient" asp-route-id="@item"></a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>

        <script type="text/javascript">
            const projectName = 'survey-form';

        </script>

        @section Scripts{
            <script>
                function myFunction() {
                    var input, filter, table, tr, td, i, txtValue;
                    input = document.getElementById("myInput");
                    filter = input.value.toUpperCase();
                    table = document.getElementById("myTable");
                    tr = table.getElementsByTagName("tr");
                    for (i = 0; i < tr.length; i++) {
                        td = tr[i].getElementsByTagName("td")[1];
                        if (td) {
                            txtValue = td.textContent || td.innerText;
                            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                                tr[i].style.display = "";
                            } else {
                                tr[i].style.display = "none";
                            }
                        }
                    }
                }
            </script>


        }
    </form>





</div>