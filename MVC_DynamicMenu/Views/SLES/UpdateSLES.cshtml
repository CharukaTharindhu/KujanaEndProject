
@model MVC_DynamicMenu.Models.AddNewSLESProgress
@{
    ViewData["Title"] = "Home page";
}
<head>
    <link href="~/css/Addfile.css" rel="stylesheet" />
</head>
<div class="container">
    <header class="header">
        <h1 id="title" class="text-center">Add New SLES Progress</h1>
        <p id="description" class="description text-center">

        </p>
    </header>
    <form asp-action="UpdateSLES" id="survey-form">
        <div class="form-group">
            <label id="name-label" asp-for="Client">Participant</label>
            <input type="text"
                   asp-for="Client"
                   id="name"
                   class="form-control"
                   placeholder="Enter your name"
                   required />


        </div>
        <input type="hidden" asp-for="ClientID" />
        @*Date Start*@
        <label asp-for="EntryDate">Entry Date</label>
        <input type="date" asp-for="EntryDate" id="dateofbirth">

        @*Hierarchy Start*@
        <div class="form-group">
            <p>Hierarchy</p>
            <select id="dropdown" asp-for="Hierarchy" class="form-control" required>
                @*<option disabled selected value>Select current role</option>*@
                <option value="ACT_Springfield_Evergreen">ACT Springfield Evergreen</option>
                <option value="NWS_Demo_Region">NWS Demo Region</option>
                <option value="NSW_Demo_Region_A_Unit_1_3">NSW Demo Region A Unit 1 3</option>
                <option value="NSW_Demo_Region_2_Unit_2_1_A">NSW Demo Region 2 Unit 2 1 A</option>
                <option value="QLD_Region_4_Bridging_Famillies">QLD Region 4 Bridging Famillies</option>
                <option value="QLD_Region_Younger_parents_program">QLD Region Younger parents program</option>
                <option value="NWS_Eiver_Dischange_review">NWS Eiver Dischange review</option>
            </select>
        </div>

        <label asp-for="Date">Date</label>
        <input type="date" asp-for="Date" id="dateofbirth">
        <button type="button" class="accordion">Type of Contact</button>
        <div class="panel">
            <div class="form-group">


                <h6>Type Of Contact</h6>
                <label>
                    <input asp-for="TypeOfContact"
                           value="Yes"
                           type="radio"
                           class="input-radio"
                           checked />Yes
                </label>
                <label>
                    <input asp-for="TypeOfContact"
                           value="No"
                           type="radio"
                           class="input-radio" />No
                </label>

            </div>

        </div>

        <button type="button" class="accordion">Activity</button>
        <div class="panel">
            <h6>Activity</h6>
            <textarea id="comments"
                      class="input-textarea"
                      asp-for="Activity"></textarea>

            <div class="form-group">


                <h6>Any Barrierss Identified</h6>
                <label>
                    <input asp-for="AnyBarrierssIdentified"
                           value="Yes"
                           type="radio"
                           class="input-radio"
                           checked />Yes
                </label>
                <label>
                    <input asp-for="AnyBarrierssIdentified"
                           value="No"
                           type="radio"
                           class="input-radio" />No
                </label>

            </div>

            <h6>If yes list barriers identifieed</h6>
            <textarea id="comments"
                      class="input-textarea"
                      asp-for="If_yes_list_barriers_identifieed"></textarea>

            <h6>Step taken to Address beriers</h6>
            <textarea id="comments"
                      class="input-textarea"
                      asp-for="Step_taken_to_Address_beriers"></textarea>

            <h6>Duration</h6>
            <label id="name-label" asp-for="Duration">Duration</label>
            <input type="text"
                   asp-for="Duration"
                   id="name"
                   class="form-control"
                   required />

            <div class="form-group">
                <p>Completion & Sign-off</p>
                <label id="name-label" asp-for="StaffName">Staff Member Name</label>
                <input type="text"
                       asp-for="StaffName"
                       id="name"
                       class="form-control"
                       placeholder="Select Staff"
                       required />
            </div>
        </div>
        <button type="submit" id="submit" class="submit-button">
            Submit
        </button>

        <script type="text/javascript">
            const projectName = 'survey-form';

        </script>
    </form>
</div>





