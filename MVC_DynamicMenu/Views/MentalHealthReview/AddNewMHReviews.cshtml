
@model NewMentalHealthReview
@using Newtonsoft.Json;
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "AddNewClient";
    List<Patient> cli = JsonConvert.DeserializeObject<List<Patient>>(Context.Session.GetString("mental"));
}
<head>
    <link href="~/css/Addfile.css" rel="stylesheet" />
</head>
<div class="container">
    <header class="header">
        <h1 id="title" class="text-center">Form : Mental Health Review Form</h1>
        <p id="description" class="description text-center">

        </p>
    </header>
    <form asp-action="AddNewMHReviews" id="survey-form">
        <div class="form-group">
            <label id="name-label" asp-for="Client_Name">Participant</label>
            <select class="form-control" asp-for="Client_Name" placeholder="Pick a Name">
                @foreach (var item in cli)
                {
                    <option value="@item.Full_Name">@item.Full_Name</option>

                }

            </select>
        </div>
        @*Date Start*@
        <label asp-for="Entry_date">Entry Date</label>
        <input type="date" asp-for="Entry_date" id="dateofbirth">

        @*Hierarchy Start*@
        <div class="form-group">
            <p>Hierarchy</p>
            <select id="dropdown" asp-for="Hierarchy" class="form-control" required>
                @*<option disabled selected value>Select current role</option>*@
                <option value="ACT_Springfield_Evergreen">ACT Springfield Evergreen</option>
                <option value="NWS_Demo_Region">NWS Demo Region</option>
                <option value="NSW_Demo_Region_A_Unit_1_3">NSW Demo Region A Unit 1 3</option>
                <option value="NSW_Demo_Region_2_Unit_2_1_A">NSW Demo Region 2 Unit 2 1 A</option>
                <option value="QLD_Region_4_Bridging_Famillies">QLD Region 4 Bridging Famillies</option>
                <option value="QLD_Region_Younger_parents_program">QLD Region Younger parents program</option>
                <option value="NWS_Eiver_Dischange_review">NWS Eiver Dischange review</option>
            </select>
        </div>


        <h6>Client Status</h6>
        <textarea id="comments" class="input-textarea" asp-for="Client_status"></textarea>


        <h6>Question 1</h6>
        <textarea id="comments" class="input-textarea" asp-for="Question_1"></textarea>

        <h6>Question 2</h6>
        <textarea id="comments" class="input-textarea" asp-for="Question_2"></textarea>


        <h6>Question 3</h6>
        <textarea id="comments" class="input-textarea" asp-for="Question_3"></textarea>


        <h6>Question 4</h6>
        <textarea id="comments" class="input-textarea" asp-for="Question_4"></textarea>


        <h6>Question 5</h6>
        <textarea id="comments" class="input-textarea" asp-for="Question_5"></textarea>


        <h6>Summery</h6>
        <textarea id="comments" class="input-textarea" asp-for="Summery"></textarea>





        <div class="form-group">
            <button type="submit" id="submit" class="submit-button">
                Submit
            </button>
        </div>


        <script type="text/javascript">
            const projectName = 'survey-form';

        </script>

        <script>
           
            $(document).ready(function () {
                $('select').selectize({
                    sortField: 'text'
                });
            });

        </script>
    </form>
</div>








